<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_popmenu"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_vertical"
         android:orientation="vertical" >

		<RelativeLayout
                android:id="@+id/layout_pop_useinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_bg_top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_popmenu_useinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="使用说明"
                android:textColor="@color/lightBlue"
                android:textSize="18dp" />

        </RelativeLayout>

		<LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center_vertical"
	                android:orientation="vertical">
	
	                <!-- 分隔线 -->
	
	                <View style="@style/my_horizontal_line_style" />
	            </LinearLayout>
	            
	    <RelativeLayout
	            android:id="@+id/layout_pop_about"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/item_bg_top"
	        android:orientation="horizontal" >
	
		    <TextView
		        android:id="@+id/txt_pop_about"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:text="关于我们"
		        android:textColor="@color/lightBlue"
		        android:textSize="18dp" />
	
	    </RelativeLayout>
	    
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:gravity="center_vertical"
	                android:orientation="vertical">
	
	                <!-- 分隔线 -->
	
	                <View style="@style/my_horizontal_line_style" />
	            </LinearLayout>
	
	    
	    <RelativeLayout
	            android:id="@+id/layout_pop_exit"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:background="@drawable/item_bg_bottom"
	        android:orientation="horizontal" >
	
		    <TextView
		        android:id="@+id/txt_pop_exit"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:text="退出应用"
		        android:textColor="@color/lightBlue"
		        android:textSize="18dp" />
	
	    </RelativeLayout>
    </LinearLayout>

	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="6dp">
	            </LinearLayout>

	<LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_vertical"
         android:orientation="vertical" >
        <RelativeLayout
                android:id="@+id/layout_pop_cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/item_bg_single"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt_pop_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="取消"
                android:textColor="@color/lightBlue"
                android:textSize="18dp" />

        </RelativeLayout>
    </LinearLayout>

	<LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="10dp">
	            </LinearLayout>

</LinearLayout>